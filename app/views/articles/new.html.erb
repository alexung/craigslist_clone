<!--can add in , html: {class: "nifty_form"} after url, if you want-->
<!-- can also add class after each field, like class: 'text_field' -->
<%= form_for @article, url: {action: "create"} do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div>
    <%= f.label :address %>
    <%= f.text_field :address %>
  </div>

  <div>
    <%= f.label :price %>
    <%= f.number_field :price, step: 'any' %>
  </div>

  <div>
    <%= f.submit "Post!" %>
  </div>
<% end %>
